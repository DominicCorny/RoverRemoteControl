<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.tim.domi.remotecontrol.RoverControlActivity">

    <com.tim.domi.remotecontrol.widget.VerticalSeekBar
        android:id="@+id/speed_seekbar"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"

        android:alpha="0.4"

        android:max="100"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:progress="50"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/adjust"
        android:visibility="invisible"
        tools:ignore="RtlHardcoded" />

    <SeekBar
        android:id="@+id/steeringSeekBar"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape"
        android:alpha="0.4"

        android:max="100"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:progress="50"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/circle"
        android:visibility="invisible"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="connectClick"
        android:textSize="25sp"
        android:text="@string/connect_button" />

</RelativeLayout>
